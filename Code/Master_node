#include <SoftwareSerial.h>

SoftwareSerial mini = SoftwareSerial(2, 4); //2-> Rx of uno, 4 -> Tx of uno

void setup() {
  Serial.begin(9600);
  mini.begin(9600);
  mini.listen();
  Serial.println("transmission starts");  

}

// The below code is for printing byte by byte

/*char str;

void loop() {
  if (mini.available() > 0 )
 {  
    str = mini.read();
    Serial.println(str); 
 }
}*/

void loop() {
  if (mini.available() > 0 )
 {  
    char data[255];
    uint8_t k = 0;
    data[k] = mini.read();
    k++;
   
    for (int i = 0; i < k; i++) {
        Serial.print(data[i]);
        data [i] = '\0';
    }
 }
}
