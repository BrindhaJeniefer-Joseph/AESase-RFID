#include <SoftwareSerial.h>

SoftwareSerial mini = SoftwareSerial(2, 4); //2-> Rx of uno, 4 -> Tx of uno

void setup() {
  Serial.begin(9600);
  mini.begin(9600);
  mini.listen();
  Serial.println("transmission starts");  

}

char str;

void loop() {
  if (mini.available() > 0 )
 {  
    str = mini.read();
    Serial.println(str); 
 }
}
